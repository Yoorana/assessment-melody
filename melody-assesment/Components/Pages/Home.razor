@page "/"
@inject NavigationManager NavManager
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div class="viewport">
  <div class="card shipping-card shadow-sm">
    <div class="card-body d-flex flex-column align-items-center">
      <div class="shipping-icon mb-3">
        <svg width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
          <path
            d="M16 2.5a.5.5 0 0 0-.66-.47l-15 5.5a.5.5 0 0 0 .04.94l6.18 1.65 1.65 6.18a.5.5 0 0 0 .94.04l5.5-15A.5.5 0 0 0 16 2.5zm-2.89 1.06l-4.95 13.5-1.5-5.62-5.62-1.5 13.5-4.95z" />
        </svg>
      </div>
      <h5 class="card-title mb-2">Create New Shipping</h5>
      <p class="card-text text-center mb-4">
        Start a new shipment with Zineps.
        <br> Click below to begin!
      </p>
      <button class="next-button" @onclick="GoToInformation">
        Create new shipping
        <svg class="next-arrow" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="#fff"
          stroke-width="2" viewBox="0 0 24 24">
          <path d="M5 12h14M13 6l6 6-6 6" />
        </svg>
      </button>
    </div>
  </div>
</div>

@code {
  private void GoToInformation()
  {
    NavManager.NavigateTo("information");
  }
}